{%- comment -%}
  Size Chart Snippet - Table Format Only
  Usage: {% render 'size-chart' %}
{%- endcomment -%}

<div class="size-chart-wrapper" id="size-chart-{{ section.id | default: 'default' }}">
  {%- if section.settings.heading != blank -%}
    <h3 class="size-chart-title">{{ section.settings.heading }}</h3>
  {%- else -%}
    <h3 class="size-chart-title">Size Chart</h3>
  {%- endif -%}

  <div class="size-chart-container">
    <!-- Table Size Chart -->
    <div class="size-chart-table-wrapper">
      <table class="size-chart-table">
        <thead>
          <tr>
            <th>SIZE</th>
            <th>WIDTH</th>
            <th>LENGTH</th>
            <th>SLEEVE</th>
            <th>FS HEIGHT</th>
            <th>SHOULDER</th>
          </tr>
        </thead>
        <tbody>
          {%- if section.settings.size_s != blank or section.settings.size_m != blank or section.settings.size_l != blank or section.settings.size_xl != blank or section.settings.size_2xl != blank -%}
            {%- if section.settings.size_s != blank -%}
              <tr>
                <td>S</td>
                <td>{{ section.settings.size_s_width | default: '-' }}</td>
                <td>{{ section.settings.size_s_length | default: '-' }}</td>
                <td>{{ section.settings.size_s_sleeve | default: '-' }}</td>
                <td>{{ section.settings.size_s_height | default: '-' }}</td>
                <td>{{ section.settings.size_s_shoulder | default: '-' }}</td>
              </tr>
            {%- endif -%}
            {%- if section.settings.size_m != blank -%}
              <tr>
                <td>M</td>
                <td>{{ section.settings.size_m_width | default: '-' }}</td>
                <td>{{ section.settings.size_m_length | default: '-' }}</td>
                <td>{{ section.settings.size_m_sleeve | default: '-' }}</td>
                <td>{{ section.settings.size_m_height | default: '-' }}</td>
                <td>{{ section.settings.size_m_shoulder | default: '-' }}</td>
              </tr>
            {%- endif -%}
            {%- if section.settings.size_l != blank -%}
              <tr>
                <td>L</td>
                <td>{{ section.settings.size_l_width | default: '-' }}</td>
                <td>{{ section.settings.size_l_length | default: '-' }}</td>
                <td>{{ section.settings.size_l_sleeve | default: '-' }}</td>
                <td>{{ section.settings.size_l_height | default: '-' }}</td>
                <td>{{ section.settings.size_l_shoulder | default: '-' }}</td>
              </tr>
            {%- endif -%}
            {%- if section.settings.size_xl != blank -%}
              <tr>
                <td>XL</td>
                <td>{{ section.settings.size_xl_width | default: '-' }}</td>
                <td>{{ section.settings.size_xl_length | default: '-' }}</td>
                <td>{{ section.settings.size_xl_sleeve | default: '-' }}</td>
                <td>{{ section.settings.size_xl_height | default: '-' }}</td>
                <td>{{ section.settings.size_xl_shoulder | default: '-' }}</td>
              </tr>
            {%- endif -%}
            {%- if section.settings.size_2xl != blank -%}
              <tr>
                <td>2XL</td>
                <td>{{ section.settings.size_2xl_width | default: '-' }}</td>
                <td>{{ section.settings.size_2xl_length | default: '-' }}</td>
                <td>{{ section.settings.size_2xl_sleeve | default: '-' }}</td>
                <td>{{ section.settings.size_2xl_height | default: '-' }}</td>
                <td>{{ section.settings.size_2xl_shoulder | default: '-' }}</td>
              </tr>
            {%- endif -%}
          {%- else -%}
            <!-- Default size chart data - empty until filled -->
            <tr>
              <td colspan="6" style="text-align: center; padding: 2rem; color: #666;">
                No size data available. Please add measurements in theme customizer.
              </td>
            </tr>
          {%- endif -%}
        </tbody>
      </table>
    </div>

    {%- if section.settings.size_chart_notes != blank -%}
      <div class="size-chart-notes rte">
        {{ section.settings.size_chart_notes }}
      </div>
    {%- endif -%}

    {%- if section.settings.size_chart_image != blank -%}
      <div class="size-chart-image">
        {{
          section.settings.size_chart_image
          | image_url: width: 800
          | image_tag:
            loading: 'lazy',
            widths: '400, 600, 800',
            alt: section.settings.heading | default: 'Size Chart'
        }}
      </div>
    {%- endif -%}
  </div>
</div>